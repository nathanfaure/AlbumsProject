@using AlbumsProject.ViewModels
@model PostVm


<div class="form-horizontal">
    <div class="form-group">
        <div class="pull-right">
            @Html.ActionLink("Edit", "EditPost",
                     new { @id = Model.Id }, new { @class = "btn btn-default" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Title,
                 htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.DisplayFor(model => model.Title)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Content,
                 htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.DisplayFor(model => model.Content)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Author,
                 htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.DisplayFor(model => model.Author)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-3">
            <button class="btn btn-default show-comment-container" postId="@Model.Id">Comment</button>
        </div>
        <div class="col-md-offset-2 row add-comment-container" postId="@Model.Id">
            <div class="col-md-10">
                <textarea class="comment-text"></textarea>
                <button class="btn btn-default btn-add-comment"> Add Comment</button>
            </div>
        </div>
    </div>
    <div class="form-group comments-container">
        <label class="comments-label"> Comments: </label>
        <div class="col-md-8">
            <div class="row">
                @foreach (var comment in Model.Comments)
                {
                    @Html.Partial("_CommentPartial", comment);
                }

            </div>
        </div>
    </div>

</div>
